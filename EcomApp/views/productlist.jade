script(src = '/javascripts/productlist.js')

extends layout

block content
    form#searchbox.col-sm-offset-4.col-sm-4(method='get', action='/productlist')
     input.form-control(name='search', placeholder='Type Product Name', required='false')
     input.submitButton(type='submit', value='Search')
    div(class="products")
        - each products in productlist
            div(class="singleproduct")
                div(class="thumbnail")
                    img(src="#{products.IMAGE_URL}", alt="...", class="img-responsive")
                    div(class="caption")
                        h3 #{products.TITLE}
                        p(align="justify",class="description") #{products.FEATURE_BULLETS}
                        div(class="clearfix")
                            div(class="price") #{products.SALE_PRICE}
                            a(href="#",class="btn btn-success pull-right",role="button") Add to cart